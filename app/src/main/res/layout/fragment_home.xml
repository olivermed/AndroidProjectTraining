<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.raphifou.find.Home">

    <!-- TODO: Update blank fragment layout -->
    <!-- A CardView that contains a TextView -->

    <android.support.v7.widget.CardView
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="226dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/fab_margin"
        android:background="@color/colorPrimaryDark"
        android:textAlignment="center"
        card_view:cardBackgroundColor="#4CAF50"

        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="287dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/info_text2"
                android:layout_width="316dp"
                android:layout_height="1038dp"
                android:layout_weight="1"
                android:text="@string/second_cardview"
                android:textColor="@color/cardview_light_background"
                android:textSize="40sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ask"
                android:textColor="#fff"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/cardview_default_elevation"
                android:id="@+id/TvRegisterhere"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_gravity="top"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:background="@color/colorPrimaryDark"
        android:textAlignment="center"
        card_view:cardBackgroundColor="@color/colorPrimaryDark"

        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="236dp">


            <TextView
                android:id="@+id/info_text"
                android:layout_width="261dp"
                android:layout_height="1000dp"
                android:text="@string/first_cardview"
                android:textColor="#fff"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/TvRegisterhere2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="bottom"
                android:text="share"
                android:textColor="#fff" />

        </LinearLayout>
    </android.support.v7.widget.CardView>


</FrameLayout>
